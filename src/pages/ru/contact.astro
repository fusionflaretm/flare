---
import { changeLanguage } from "i18next";
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";

changeLanguage("ru");

let contacts = [
    {
        title: "Брендинг",
        email: "branding@fusionflare.io",
        phone: "+351 (933) 651-883",
    },
    {
        title: "Кадровое дело",
        email: "hr@fusionflare.io",
        phone: "+351 (933) 651-883",
    },
    {
        title: "Программная инженерия",
        email: "softwareengineering@fusionflare.io",
        phone: "+351 (937) 893-255",
    },
    {
        title: "Научно-исследовательская и разработка",
        email: "research@fusionflare.io",
        phone: "+351 (937) 893-255",
    },
];
---

<Layout title="Contact">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Контакты</Fragment>
			<Fragment slot="desc">Свяжитесь с нами.</Fragment>
		</Sectionhead>

		<div class="py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl space-y-16 divide-y divide-gray-100 lg:mx-0 lg:max-w-none">
					<div class="grid grid-cols-1 gap-x-8 gap-y-10 lg:grid-cols-3">
						<div>
							<script src="https://cdn.lordicon.com/lordicon.js"></script>
							<lord-icon class="m-auto"
								src="https://cdn.lordicon.com/wzrwaorf.json"
								trigger="loop"
								colors="primary:#EAE2B7,secondary:#003049"
								style="width:150px;height:150px">
							</lord-icon>
							<h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">Департаменты</h2>
							<p class="mt-4 leading-7 text-gray-600 dark:text-gray-200">Обращайтесь к нашим выделенным командам.</p>
						</div>
						<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:col-span-2 lg:gap-8 ">
							{
								contacts.map((item) => (
									<div class="rounded-2xl bg-gray-50 dark:bg-stone-800 p-10 transition ease-in-out delay-150 cursor-pointer hover:-translate-y-1 hover:scale-105 hover:shadow-[5px_5px_rgba(234,226,183,1.000),_10px_10px_rgba(234,226,183,_0.7),_15px_15px_rgba(234,226,183,_0.6),_20px_20px_rgba(234,226,183,_0.5),_22px_22px_rgba(234,226,183,_0.4)]  duration-150">
										<h3 class="text-base font-semibold leading-7 text-gray-900 dark:text-white">{item.title}</h3>
										<dl class="mt-3 space-y-1 text-sm leading-6 text-gray-600 dark:text-white">
											<div>
												<dt class="sr-only">Email</dt>
												<dd>
													<a class="font-semibold text-stone-600 dark:text-white" href="mailto:collaborate@example.com">
														{item.email}
													</a>
												</dd>
											</div>
											<div class="mt-1">
												<dt class="sr-only">Telefonnummer</dt>
												<dd>{item.phone}</dd>
											</div>
										</dl>
									</div>
								))
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</Container>
</Layout>
